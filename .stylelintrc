{
	"extends": "stylelint-config-standard",
	"rules": {
		"indentation": "tab",
		"selector-pseudo-element-colon-notation": "single",
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"extend",
					"at-root",
					"debug",
					"warn",
					"error",
					"if",
					"else",
					"for",
					"each",
					"while",
					"mixin",
					"include",
					"content",
					"return",
					"tailwind",
					"apply",
					"responsive",
					"variants",
					"screen",
					"function"
				]
			}
		]
	}
}
