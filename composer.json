{
  "name": "bengrey/custom-gutenberg",
  "description": "Custom Gutenberg",
  "license": "MIT",
  "authors": [
    {
      "name": "WPPunk",
      "email": "i@wp-punk.com"
    }
  ],
  "config": {
    "platform": {
      "php": "7.2.5"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "bamarni/composer-bin-plugin": true
    }
  },
  "require": {
    "rdlowrey/auryn": "^1.4"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^v1.5.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2"
  },
  "autoload": {
    "classmap": ["blocks"],
    "psr-4": {
      "CustomGutenberg\\": "blocks/"
    }
  },
  "extra": {
    "phpcodesniffer-search-depth": 1
  },
  "scripts": {
    "cs": "phpcs --standard=.phpcs.xml .",
    "scoper": [
      "composer bin php-scoper config minimum-stability dev",
      "composer bin php-scoper config prefer-stable true",
      "composer bin php-scoper require --dev humbug/php-scoper",
      "php-scoper add-prefix --config .scoper.inc.php --output-dir vendor_prefixed/",
      "rm -rf vendor-bin/",
      "composer dumpautoload"
    ],
    "build": [
      "composer scoper -n",
      "composer remove rdlowrey/auryn",
      "composer dumpautoload"
    ],
    "init-project": [
      "composer build",
      "npm install"
    ],
    "post-create-project-cmd": [
      "composer init-project"
    ]
  }
}
